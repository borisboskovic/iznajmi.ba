<!DOCTYPE html>
<html>
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITP1</title>

    <link href="~/css/offcanvas.css" rel="stylesheet" />
    <link href="~/bootstrap/dist/css/bootstrapunited.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/fontawesome/css/all.css" rel="stylesheet" />




    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css" />
</head>
<body style="min-height:750px;">
    <nav class="navbar navbar-default navbar-fixed-top">
        @if (TempData["LoginInfo"] != null)
        {
            <div class="alert alert-success alert-dismissible fade in" style="margin-top:70px; margin-left:20px; margin-right:20px;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <p><strong>@TempData["LoginInfo"]</strong></p>
            </div>
        }
        @if (TempData["EmailValidation"] != null)
        {
            <div class="alert alert-success alert-dismissible fade in" style="margin-top:70px; margin-left:20px; margin-right:20px;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <p><strong>@TempData["EmailValidation"]</strong></p>
            </div>
        }
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand" style="margin-top: -7px;height: 70px;"><i class="fas fa-home fa-2x"></i></a>

            <div @*class="navbar-collapse collapse" *@>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" style="background-color:transparent">
                        <a href="#" class="dropdown-toggle menu-item pull-right" data-toggle="dropdown" style=""><i class="fas fa-user-circle fa-2x pull-right"></i></a>
                        <ul id="login-dp" class="dropdown-menu pull-right side-bar-right" style="right:-90px;">
                            <li>
                                <partial name="_LoginPartial" />
                            </li>
                            <ul class="nav navbar-nav navbar-right" style="width:100%">
                                <li style="width:100%; margin-left:-15px;">
                                    <a asp-area="" asp-controller="Nekretnine" asp-action="Insert">Dodaj nekretninu</a>
                                </li>
                            </ul>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <partial name="_CookieConsentPartial" />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <p>&copy; 2019 - IZNAJMI.BA
            <br />Studentski projekat iz predmeta Internet tehnologije i programiranje.</p>
        </footer>
    </div>


    <environment include="Development">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/fontawesome/js/fontawesome.js"></script>
        <script src="~/js/offcanvas.js"></script>
    </environment>


    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment-with-locales.min.js"></script>
    <script src="~/js/datetime-picker.js"></script>

    <script type="text/javascript">
        window.onload = function () {
            $('.datetimepicker1').datetimepicker({
                //locale: 'fr',
                //locale: 'en'
                locale: 'sr',
            });
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
