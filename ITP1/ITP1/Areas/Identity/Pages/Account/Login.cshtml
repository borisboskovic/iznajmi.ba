@page
@model LoginModel

@{
}
<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-5 col-sm-offset-3">
            <div class="thumbnail" style="padding-left:60px;padding-right:60px;">
                <section>
                    <h3 style="color:#FFA260"><strong>Prijava na sistem</strong></h3>
                    <hr />
                    <h5>Prijavi se koristeći</h5>
                    <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                <button style="width:100%" type="submit" class="btn btn-primary" name="provider" value="Facebook" title="Log in using your Facebook account"><i class="fab fa-facebook-f pull-left fa-2x"></i><span style="line-height:26px">Facebook</span></button>

                                @*@foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button style="width:100%" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-facebook-f pull-left fa-2x"></i><span style="line-height:26px">@provider.DisplayName</span></button>
                                    }*@
                            </p>
                        </div>
                    </form>
                    <form method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="custom-btn offset" style="width:100%">Prijavi se</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se kao novi korisnik</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
       
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
