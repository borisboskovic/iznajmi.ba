@page
@model RegisterModel
@{
}


<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-5 col-sm-offset-3">
        <div class="thumbnail" style="padding-left:60px;padding-right:60px;">
            <h3 style="color:#FFA260"><strong>REGISTRACIJA</strong></h3>
            <hr />
            <h5>Prijavi se koristeći</h5>
        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <p>
                        <button style="width:100%" type="submit" class="btn btn-primary" name="provider" value="Facebook" title="Log in using your Facebook account"><i class="fab fa-facebook-f pull-left fa-2x"></i><span style="line-height:26px">Facebook</span></button>
                        @*@foreach (var provider in Model.ExternalLogins)
                        {
                            <button style="width:100%" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-facebook-f pull-left fa-2x"></i><span style="line-height:26px">@provider.DisplayName</span></button>
                        }*@
                    </p>
                </div>
            </form>
        <hr />
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 style="color:#FFA260; margin-bottom:16px;">Kreirajte novi nalog</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="custom-btn offset" style="width: 100%">Registruj se</button>
            </form>
            <br />
            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Prijavite se sa postojećim nalogom</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
