@page
@model ExternalLoginModel
@{
}

<h4>Povežite vaš @Model.LoginProvider nalog.</h4>
<hr />

<p class="text-info">
    Uspješno ste se prijavili koristeći <strong>@Model.LoginProvider</strong>.
    Molimo vas pritisnite Nastavi kako bi završili prijavu.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" readonly/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="custom-btn offset">Nastavi</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

